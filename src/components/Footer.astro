---
import Phone from "./Phone.astro";
import Email from "./Email.astro";
import Facebook from "./Facebook.astro";
import { Image } from "astro:assets";
import logoImage from "../assets/logo.png"; // Adjust path as needed
---

<footer class="footer py-12">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Organization Info -->
            <div class="flex flex-col items-center md:items-start">
                <div class="mb-4">
                    <Image src={logoImage} alt="Monumentum Logo" width={150} height={60} class="h-auto" />
                </div>
                <p class="text-sm  mt-2 text-center md:text-left">
                    © Stowarzyszenie na rzecz Rozwoju Badań<br />
                    Historycznych i Edukacji Monumentum
                </p>
            </div>

            <!-- Contact Info -->
            <div class="flex flex-col items-center md:items-start">
                <p class="text-lg font-semibold mb-4 border-b border-gray-500 pb-2 w-full text-center md:text-left">Kontakt</h3>
                <div class="space-y-3 ">
                    <div class="flex items-center gap-3">
                        <Phone hasIcon={true} />
                        <Phone hasIcon={false} />
                    </div>
                    <div class="flex items-center gap-3">
                        <Email hasIcon={true} />
                        <Email hasIcon={false} />
                    </div>
                    <div class="flex items-center gap-3">
                        <Facebook hasIcon={true} />
                        <Facebook hasIcon={false} />
                    </div>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="flex flex-col items-center md:items-start">
                <p class="text-lg font-semibold mb-4 border-b border-gray-500 pb-2 w-full text-center md:text-left">Nawigacja</h3>
                <ul class="space-y-2 text-sm text-gray-300">
                    <li><a href="/" class="hover:text-white transition-colors duration-200">Strona główna</a></li>
                    <li><a href="/o_nas/" class="hover:text-white transition-colors duration-200">O nas</a></li>
                    <li><a href="/projekty/" class="hover:text-white transition-colors duration-200">Projekty</a></li>
                    <li><a href="/kontakty/" class="hover:text-white transition-colors duration-200">Kontakt</a></li>
                </ul>
            </div>
        </div>

        <div class="mt-12 pt-4 border-t border-gray-700 text-center text-xs ">
            <p>realizacja: Igor Rak | {new Date().getFullYear()}</p>
        </div>
    </div>
</footer>

<style>
    footer a:hover {
        text-decoration: underline;
    }
</style>