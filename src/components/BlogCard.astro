---
interface Props {
  imageUrl: string;
  title: string;
  description: string; 
  buttonLink: string;
}

const { imageUrl, title, description, buttonLink } = Astro.props;
---

<div class="min-w-xs flex-initial">  
  <div class="max-w-xs lg:min-w-sm bg-white  rounded-lg box">
    <a href="/blog/artykuł">
      <img  class="rounded-t-lg w-full h-48 object-cover" src={imageUrl} alt={title} />
    </a>
    <div class="p-5">
      <a href="/blog/artykuł">
        <div class="mb-5 text-xl font-bold tracking-tight text-gray-900">{title}</h5>
      </a>
      <p class="mb-5 text-base font-normal text-gray-700">{description}</p>
      <a href={buttonLink} class="inline-flex items-center px-3 py-2 text-sm text-center text-white  rounded-lg hover:bg-red-400 focus:ring-4 focus:outline-none focus:ring-red-400 category-background">
        Więcej Informacji
        <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
      </a>
    </div>
  </div>
</div>